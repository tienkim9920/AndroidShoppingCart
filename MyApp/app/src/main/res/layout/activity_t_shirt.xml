<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/nav_shopping"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/black"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="REPRESENT"
                android:textStyle="bold"
                android:textSize="45dp"
                android:textColor="#fff"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center">
                <EditText
                    android:id="@+id/inputSearch"
                    android:layout_height="50dp"
                    android:layout_width="290dp"
                    android:layout_gravity="center"
                    android:hint="Enter Search"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edit"
                    android:paddingHorizontal="25dp"
                    android:inputType="text"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_search_24"
                    android:background="@drawable/edit"/>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="490dp"
            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:columnCount="2"
                android:padding="5dp"
                android:rowCount="6"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="260dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:src="@drawable/aog" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T-Shirt G"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"

                            >

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="70dp"
                                android:layout_marginTop="5dp"
                                android:text="25$"
                                android:textSize="23dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textStyle="italic"
                                android:layout_marginLeft="5dp"
                                />

                            <Button
                                android:layout_height="35dp"
                                android:layout_width="35dp"
                                android:text="+"
                                android:textSize="25sp"
                                android:background="@drawable/buyproduct"
                                android:textColor="@android:color/black"
                                android:layout_marginLeft="38dp"
                                android:layout_marginTop="8dp"
                                />

                        </TableRow>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="260dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:src="@drawable/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X Tee"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            >

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="70dp"
                                android:layout_marginTop="5dp"
                                android:text="23$"
                                android:textSize="23dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textStyle="italic"
                                android:layout_marginLeft="5dp"
                                />

                            <Button
                                android:layout_height="35dp"
                                android:layout_width="35dp"
                                android:text="+"
                                android:textSize="25sp"
                                android:background="@drawable/buyproduct"
                                android:textColor="@android:color/black"
                                android:layout_marginLeft="38dp"
                                android:layout_marginTop="8dp"
                                />

                        </TableRow>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="260dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:id="@+id/flannel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:src="@drawable/flannelsky" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flannel Sky"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            >

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="70dp"
                                android:layout_marginTop="5dp"
                                android:text="30$"
                                android:textSize="23dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textStyle="italic"
                                android:layout_marginLeft="5dp"
                                />

                            <Button
                                android:layout_height="35dp"
                                android:layout_width="35dp"
                                android:text="+"
                                android:textSize="25sp"
                                android:background="@drawable/buyproduct"
                                android:textColor="@android:color/black"
                                android:layout_marginLeft="38dp"
                                android:layout_marginTop="8dp"
                                />

                        </TableRow>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="260dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:src="@drawable/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X Gray"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            >

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="70dp"
                                android:layout_marginTop="5dp"
                                android:text="20$"
                                android:textSize="23dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textStyle="italic"
                                android:layout_marginLeft="5dp"
                                />

                            <Button
                                android:layout_height="35dp"
                                android:layout_width="35dp"
                                android:text="+"
                                android:textSize="25sp"
                                android:background="@drawable/buyproduct"
                                android:textColor="@android:color/black"
                                android:layout_marginLeft="38dp"
                                android:layout_marginTop="8dp"
                                />

                        </TableRow>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="260dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:src="@drawable/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tee Sky"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            >

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="70dp"
                                android:layout_marginTop="5dp"
                                android:text="28$"
                                android:textSize="23dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textStyle="italic"
                                android:layout_marginLeft="5dp"
                                />

                            <Button
                                android:layout_height="35dp"
                                android:layout_width="35dp"
                                android:text="+"
                                android:textSize="25sp"
                                android:background="@drawable/buyproduct"
                                android:textColor="@android:color/black"
                                android:layout_marginLeft="38dp"
                                android:layout_marginTop="8dp"
                                />

                        </TableRow>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="260dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:src="@drawable/aog" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tee Sky"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            >

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="70dp"
                                android:layout_marginTop="5dp"
                                android:text="29$"
                                android:textSize="23dp"
                                android:textColor="@android:color/holo_red_light"
                                android:textStyle="italic"
                                android:layout_marginLeft="5dp"
                                />

                            <Button
                                android:layout_height="35dp"
                                android:layout_width="35dp"
                                android:text="+"
                                android:textSize="25sp"
                                android:background="@drawable/buyproduct"
                                android:textColor="@android:color/black"
                                android:layout_marginLeft="38dp"
                                android:layout_marginTop="8dp"
                                />

                        </TableRow>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="65dp"
                    android:orientation="vertical">

                </LinearLayout>

            </GridLayout>

        </ScrollView>

    </LinearLayout>





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        app:itemTextColor="@color/nav_color"
        app:itemIconTint="@color/nav_color"
        app:menu="@menu/bottom_navigation" />


